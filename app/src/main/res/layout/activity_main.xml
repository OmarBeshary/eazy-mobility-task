<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    tools:context=".features.trip_info.TripsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        tools:context=".features.trip_info.TripsActivity">

        <TextView
            android:id="@+id/pickup_tv"
            style="@style/LocationTextStyle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:drawableStartCompat="@drawable/pick_up_address_icn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CIB" />

        <TextView
            android:id="@+id/destination_tv"
            style="@style/LocationTextStyle"
            android:layout_marginTop="30dp"
            app:drawableStartCompat="@drawable/destination_address_icn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/pickup_tv"
            app:layout_constraintTop_toBottomOf="@id/pickup_tv"
            tools:text="Lucille's" />

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="0.57:0.9"
            app:layout_constraintEnd_toEndOf="@id/destination_tv"
            app:layout_constraintStart_toStartOf="@id/destination_tv"
            app:layout_constraintTop_toBottomOf="@id/destination_tv" />

        <Button
            android:id="@+id/first_trip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/trip_button_selector"
            app:layout_constraintEnd_toStartOf="@+id/prev_trip_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/map_fragment"
            app:layout_constraintTop_toBottomOf="@id/map_fragment"
            android:text="@string/first"/>

        <Button
            android:id="@+id/prev_trip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/first_trip_btn"
            app:layout_constraintEnd_toStartOf="@+id/next_trip_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/first_trip_btn"
            app:layout_constraintTop_toTopOf="@id/first_trip_btn"
            android:text="@string/prev"/>


        <Button
            android:id="@+id/next_trip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/prev_trip_btn"
            app:layout_constraintEnd_toStartOf="@+id/last_trip_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prev_trip_btn"
            app:layout_constraintTop_toTopOf="@id/prev_trip_btn"
            android:text="@string/next"/>

        <Button
            android:id="@+id/last_trip_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@id/map_fragment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/next_trip_btn"
            app:layout_constraintTop_toBottomOf="@id/map_fragment"
            android:text="@string/last"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>